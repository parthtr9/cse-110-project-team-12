{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "preserve",
    "allowImportingTsExtensions": true,
    "noEmit": true, // Or "emitDeclarationOnly": true
     "resolveJsonModule": true,
     "skipLibCheck": true
  },
  "include": ["src", "test"],
  "exclude": ["tests", "src/main.ts", "custom.d.ts"]
}
